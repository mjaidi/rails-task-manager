<%= form_for(task) do |f| %>
  <div class = "form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_area :details, cols: '80', rows: '5', class: "form-control" %>
  </div>
  <% if task.new_record?  %>
  <% else %>
    <div class="form-group">  
      <%= f.label :completed %>
      <%= f.check_box :completed %>
    </div>  
  <% end %>
  <%= f.submit class: "btn btn-primary"%>
<% end %>